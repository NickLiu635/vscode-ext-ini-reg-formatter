{
  "name": "ini-reg-formatter",
  "displayName": "INI/REG Formatter",
  "description": "A VSCode extension to format INI and Windows Registry (.reg) files by trimming whitespace, removing extra blank lines, and sorting fields.",
  "license": "WTFPL",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:ini",
    "onLanguage:reg"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ini",
        "aliases": ["INI", "ini"],
        "extensions": [".ini", ".cfg", ".conf"]
      },
      {
        "id": "reg",
        "aliases": ["Registry", "reg"],
        "extensions": [".reg"]
      }
    ],
    "commands": [
      {
        "command": "ini-reg-formatter.formatDocument",
        "title": "Format Document"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ini-reg-formatter.formatDocument",
          "when": "editorLangId =~ /ini|reg/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  }
}